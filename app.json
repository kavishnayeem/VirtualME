{
  "expo": {
    "name": "VirtualMe",
    "slug": "virtualme",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "virtualme",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.virtualme",   
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow VirtualMe to transcribe your voice into captions.",
        "NSMicrophoneUsageDescription": "Allow VirtualMe to access your microphone to visualize and transcribe voice."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.virtualme"           
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-av",
        { "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone to visualize and transcribe voice." }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Microphone"],
          "androidPermissions": ["RECORD_AUDIO"]
        }
      ]
    ],

    "experiments": { "typedRoutes": true },
    "extra": {
      "router": {},
      "eas": { "projectId": "d55778ed-f4f9-461b-93c4-c5f669bbec06" }
    }
  }
}
