{
  "expo": {
    "name": "VirtualMe",
    "slug": "VirtualMe",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "VirtualMe",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.virtualme",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow VirtualMe to access your location to provide 'where are you' features for your trusted contacts.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow VirtualMe to update your location in the background.",
        "UIBackgroundModes": [
          "location",
          "remote-notification"
        ],
        "NSAppTransportSecurity": { "NSAllowsArbitraryLoads": true }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/VM.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.virtualme",
      "usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/VM.png",
      "build": {
        "babel": {
          "include": [
            "expo-image"
          ]
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone to visualize and transcribe voice."
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": [
            "Microphone"
          ],
          "androidPermissions": [
            "RECORD_AUDIO"
          ]
        }
      ],
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "expo-notifications",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d55778ed-f4f9-461b-93c4-c5f669bbec06"
      }
    }
  }
}
